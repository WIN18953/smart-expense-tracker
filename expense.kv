#:import dp kivy.metrics.dp
#:import hex kivy.utils.get_color_from_hex

<TransactionItem@BoxLayout>:
    canvas.before:
        Color:
            rgba: app.col_subtext if app.col_subtext else (0.5, 0.5, 0.5, 0.2)
        Line:
            points: [self.x, self.y, self.width, self.y]
            width: 1
    size_hint_y: None
    height: dp(60)
    padding: dp(15), 0
    spacing: dp(15)

    Widget:
        size_hint: None, None
        size: dp(10), dp(10)
        pos_hint: {'center_y': 0.5}
        canvas:
            Color:
                rgba: root.indicator_color if hasattr(root, 'indicator_color') else (1, 1, 1, 1)
            Ellipse:
                pos: self.pos
                size: self.size

    Label:
        text: root.text_content if hasattr(root, 'text_content') else ""
        font_size: '14sp'
        color: app.col_text # ใช้สีจาก App
        text_size: self.width, None
        halign: 'left'
        valign: 'middle'
        font_name: app.font_name # ใช้ฟอนต์จาก App

<MySettingItem@BoxLayout>:
    canvas.before:
        Color:
            rgba: app.col_card
        Rectangle:
            pos: self.pos
            size: self.size
    size_hint_y: None
    height: dp(60)
    padding: dp(20), 0
    spacing: dp(20)

<SummaryLabel@Label>:
    size_hint_y: None
    height: dp(40)
    text_size: self.width, None
    halign: 'center'
    valign: 'middle'
    font_size: '16sp'
    color: app.col_text
    font_name: app.font_name

ScreenManager:
    HomeScreen:
        name: "home"
    AddScreen:
        name: "add"
    ReportScreen:
        name: "report"
    SettingScreen:
        name: "setting"

<HomeScreen>:
    canvas.before:
        Color:
            rgba: app.col_bg # พื้นหลังเปลี่ยนตามธีม
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        padding: dp(16)
        spacing: dp(12)

        Label:
            text: "Smart Expense Tracker"
            font_size: '24sp'
            size_hint_y: None
            height: dp(60)
            halign: 'center'
            valign: 'middle'
            color: app.col_text
            font_name: app.font_name
            
        BoxLayout:
            size_hint_y: None
            height: dp(40)
            spacing: dp(10)
            
            Label:
                text: app.txt_select_month
                size_hint_x: None
                width: dp(100)
                color: app.col_subtext
                valign: 'middle'
                font_name: app.font_name

            Spinner:
                id: month_filter
                text: app.txt_all_time
                values: [app.txt_all_time]
                size_hint_y: None
                height: dp(40)
                background_normal: ''
                background_color: app.col_card
                color: app.col_text
                font_name: app.font_name
                on_text: root.refresh()

        # ส่วนแสดงยอดเงิน
        GridLayout:
            cols: 3
            size_hint_y: None
            height: dp(80)
            spacing: dp(10)
            
            BoxLayout:
                orientation: "vertical"
                Label:
                    text: app.txt_income
                    color: 0, 1, 0, 1
                    font_size: '14sp'
                    font_name: app.font_name
                Label:
                    id: income_label
                    text: "0"
                    font_size: '18sp'
                    bold: True
                    color: app.col_text
                    font_name: app.font_name

            BoxLayout:
                orientation: "vertical"
                Label:
                    text: app.txt_expense
                    color: 1, 0, 0, 1
                    font_size: '14sp'
                    font_name: app.font_name
                Label:
                    id: expense_label
                    text: "0"
                    font_size: '18sp'
                    bold: True
                    color: app.col_text
                    font_name: app.font_name

            BoxLayout:
                orientation: "vertical"
                Label:
                    text: app.txt_balance
                    color: 0.2, 0.6, 1, 1
                    font_size: '14sp'
                    font_name: app.font_name
                Label:
                    id: balance_label
                    text: "0"
                    font_size: '18sp'
                    bold: True
                    color: app.col_text
                    font_name: app.font_name

        # ปุ่มเมนู
        Button:
            text: app.txt_menu_home
            size_hint_y: None
            height: dp(48)
            background_normal: ''
            background_color: app.col_card
            color: app.col_text
            font_name: app.font_name
            on_press: root.manager.current = "add"

        Button:
            text: app.txt_menu_report
            size_hint_y: None
            height: dp(48)
            background_normal: ''
            background_color: app.col_card
            color: app.col_text
            font_name: app.font_name
            on_press: root.manager.current = "report"

        Button:
            text: app.txt_menu_settings
            size_hint_y: None
            height: dp(48)
            background_normal: ''
            background_color: app.col_card
            color: app.col_text
            font_name: app.font_name
            on_press: root.manager.current = "setting"

        Label:
            text: app.txt_transactions
            size_hint_y: None
            height: dp(40)
            text_size: self.width, None
            halign: 'center'
            valign: 'middle'
            color: app.col_text
            font_name: app.font_name

        # รายการธุรกรรม
        ScrollView:
            do_scroll_x: False
            GridLayout:
                id: transaction_list
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(8)
                padding: dp(8)

<AddScreen>:
    canvas.before:
        Color:
            rgba: app.col_bg
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: "vertical"
        padding: dp(16)
        spacing: dp(12)

        Label:
            text: app.txt_add_title
            font_size: 24
            size_hint_y: None
            height: dp(50)
            halign: 'center'
            valign: 'middle'
            color: app.col_text
            font_name: app.font_name

        TextInput:
            id: amount_input
            hint_text: app.txt_hint_amount
            input_filter: "float"
            multiline: False
            size_hint_y: None
            height: dp(40)
            background_color: app.col_input_bg
            font_name: app.font_name

        TextInput:
            id: note_input
            hint_text: app.txt_hint_note
            multiline: False
            size_hint_y: None
            height: dp(40)
            background_color: app.col_input_bg
            font_name: app.font_name

        # --- แก้ไข Spinner ตรงนี้ ---
        Spinner:
            id: type_spinner
            text: app.type_values[0] if app.type_values else "" # ให้เลือกตัวแรกของภาษาปัจจุบันอัตโนมัติ
            values: app.type_values  # ใช้ตัวแปรจาก App
            size_hint_y: None
            height: dp(40)
            background_normal: ''
            background_color: app.col_card
            color: app.col_text
            font_name: app.font_name

        Spinner:
            id: category_spinner
            text: app.category_values[0] if app.category_values else "" # ให้เลือกตัวแรกของภาษาปัจจุบันอัตโนมัติ
            values: app.category_values # ใช้ตัวแปรจาก App
            size_hint_y: None
            height: dp(40)
            background_normal: ''
            background_color: app.col_card
            color: app.col_text
            font_name: app.font_name
        # ------------------------

        TextInput:
            id: date_input
            hint_text: app.txt_hint_date
            multiline: False
            size_hint_y: None
            height: dp(40)
            background_color: app.col_input_bg
            font_name: app.font_name

        BoxLayout:
            size_hint_y: None
            height: dp(48)
            spacing: dp(12)
            Button:
                text: app.txt_btn_save
                background_normal: ''
                background_color: app.col_card
                color: app.col_text
                font_name: app.font_name
                on_press: root.save_transaction()
            Button:
                text: app.txt_btn_cancel
                background_normal: ''
                background_color: app.col_card
                color: app.col_text
                font_name: app.font_name
                on_press: root.manager.current = "home"
        Widget:

<ReportScreen>:
    canvas.before:
        Color:
            rgba: app.col_bg
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(15)

        BoxLayout:
            size_hint_y: None
            height: dp(50)
            spacing: dp(10)
            
            Label:
                text: app.txt_report_title
                font_size: '22sp'
                bold: True
                color: app.col_text
                size_hint_x: 0.4
                halign: 'left'
                text_size: self.size
                font_name: app.font_name

            Spinner:
                id: month_spinner
                text: app.txt_select_month
                values: []
                background_normal: ''
                background_color: app.col_card
                color: app.col_text
                size_hint_x: 0.6
                font_name: app.font_name
                on_text: root.filter_report()

        Image:
            id: chart_image
            source: "" 
            allow_stretch: True
            keep_ratio: True
            size_hint_y: 0.5 

        BoxLayout:
            orientation: "vertical"
            size_hint_y: None
            height: dp(120)
            padding: dp(10)
            canvas.before:
                Color:
                    rgba: app.col_card
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [10]

            GridLayout:
                cols: 3
                size_hint_y: None
                height: dp(30)
                Label:
                    text: app.txt_income
                    color: 0, 1, 0, 1
                    bold: True
                    font_name: app.font_name
                Label:
                    text: app.txt_expense
                    color: 1, 0, 0, 1
                    bold: True
                    font_name: app.font_name
                Label:
                    text: app.txt_balance
                    color: 0.2, 0.6, 1, 1
                    bold: True
                    font_name: app.font_name
            
            Widget:
                size_hint_y: None
                height: dp(1)
                canvas:
                    Color:
                        rgba: 0.5, 0.5, 0.5, 1
                    Rectangle:
                        pos: self.x, self.y
                        size: self.width, self.height

            GridLayout:
                cols: 3
                Label:
                    id: report_income
                    text: "0.00"
                    font_size: '18sp'
                    color: app.col_text
                    font_name: app.font_name
                Label:
                    id: report_expense
                    text: "0.00"
                    font_size: '18sp'
                    color: app.col_text
                    font_name: app.font_name
                Label:
                    id: report_balance
                    text: "0.00"
                    font_size: '18sp'
                    bold: True
                    color: app.col_text
                    font_name: app.font_name

        Widget: 
            size_hint_y: 0.1

        Button:
            text: app.txt_btn_back
            size_hint_y: None
            height: dp(50)
            background_normal: ''
            background_color: app.col_card
            color: app.col_text
            font_name: app.font_name
            on_press: root.manager.current = "home"

<SettingScreen>:
    canvas.before:
        Color:
            rgba: app.col_bg
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            size_hint_y: None
            height: dp(60)
            padding: dp(20)
            Label:
                text: app.txt_setting_title
                font_size: '24sp'
                bold: True
                halign: 'left'
                text_size: self.size
                color: app.col_text
                font_name: app.font_name

        ScrollView:
            GridLayout:
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                padding: dp(20)
                spacing: dp(20)

                # --- Language & Theme ---
                Label:
                    text: app.txt_appearance
                    color: app.col_subtext
                    font_size: '14sp'
                    size_hint_y: None
                    height: dp(30)
                    halign: 'left'
                    text_size: self.size
                    font_name: app.font_name

                MySettingItem:
                    Label:
                        text: app.txt_language
                        halign: 'left'
                        text_size: self.size
                        valign: 'middle'
                        color: app.col_text
                        font_name: app.font_name
                    Button:
                        text: "EN / TH"
                        size_hint_x: None
                        width: dp(100)
                        background_normal: ''
                        background_color: hex('#2979FF')
                        on_release: app.switch_language()

                MySettingItem:
                    Label:
                        text: app.txt_theme_mode
                        halign: 'left'
                        text_size: self.size
                        valign: 'middle'
                        color: app.col_text
                        font_name: app.font_name
                    Button:
                        text: "Toggle"
                        size_hint_x: None
                        width: dp(100)
                        background_normal: ''
                        background_color: hex('#2979FF')
                        on_release: app.switch_theme()

                # --- General ---
                Label:
                    text: app.txt_general
                    color: app.col_subtext
                    font_size: '14sp'
                    size_hint_y: None
                    height: dp(30)
                    halign: 'left'
                    text_size: self.size
                    font_name: app.font_name

                MySettingItem:
                    Label:
                        text: app.txt_currency
                        halign: 'left'
                        text_size: self.size
                        valign: 'middle'
                        color: app.col_text
                        font_name: app.font_name
                    Spinner:
                        id: currency_spinner
                        text: "THB (฿)"
                        values: ["THB (฿)", "USD ($)", "EUR (€)"]
                        size_hint_x: None
                        width: dp(100)
                        background_normal: ''
                        background_color: app.col_card
                        color: app.col_text

                # --- Data Management ---
                Label:
                    text: app.txt_data_mgmt
                    color: app.col_subtext
                    font_size: '14sp'
                    size_hint_y: None
                    height: dp(30)
                    halign: 'left'
                    text_size: self.size
                    font_name: app.font_name
                
                Button:
                    text: app.txt_btn_export
                    size_hint_y: None
                    height: dp(50)
                    background_normal: ''
                    background_color: 0.2, 0.2, 0.6, 1
                    font_name: app.font_name
                    on_release: root.export_data()

                Button:
                    text: app.txt_btn_clear
                    color: 1, 0.3, 0.3, 1
                    size_hint_y: None
                    height: dp(50)
                    background_normal: ''
                    background_color: 0.2, 0.1, 0.1, 1
                    font_name: app.font_name
                    on_release: root.clear_data()

                Widget:
                    size_hint_y: None
                    height: dp(20)
                
                Label:
                    text: "Version 1.0.0\nDeveloped by CuteGroup"
                    color: 0.3, 0.3, 0.3, 1
                    font_size: '12sp'
                    halign: 'center'
                    size_hint_y: None
                    height: dp(50)

        Button:
            text: app.txt_btn_back
            size_hint_y: None
            height: dp(60)
            background_normal: ''
            background_color: 0.15, 0.15, 0.15, 1
            font_name: app.font_name
            on_release: root.manager.current = "home"