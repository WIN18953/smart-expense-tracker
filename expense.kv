#:import dp kivy.metrics.dp

# ประกาศ SummaryLabel ไว้ด้านบนสุดเพื่อใช้ในหน้า Report
<SummaryLabel@Label>:
    size_hint_y: None
    height: dp(40)
    text_size: self.width, None
    halign: 'center'
    valign: 'middle'
    font_size: '16sp'

ScreenManager:
    HomeScreen:
        name: "home"
    AddScreen:
        name: "add"
    ReportScreen:
        name: "report"
    SettingScreen:
        name: "setting"

<HomeScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: dp(16)
        spacing: dp(12)

        Label:
            text: "Smart Expense Tracker"
            font_size: 28
            size_hint_y: None
            height: dp(60)
            halign: 'center'
            valign: 'middle'
            
        BoxLayout:
            size_hint_y: None
            height: dp(40)
            spacing: dp(10)
            
            Label:
                text: "Select Month:"
                size_hint_x: None
                width: dp(100)
                color: 0.5, 0.5, 0.5, 1 # สีเทา
                valign: 'middle'

            Spinner:
                id: month_filter
                text: "All Time"
                values: ["All Time"]
                size_hint_y: None
                height: dp(40)
                background_normal: ''
                background_color: 0.2, 0.2, 0.2, 1
                on_text: root.refresh() # เมื่อเปลี่ยนเดือน ให้รีเฟรชหน้าจอใหม่
        # ส่วนแสดงยอดเงิน (GridLayout 3 ช่อง)
        GridLayout:
            cols: 3
            size_hint_y: None
            height: dp(80)
            spacing: dp(10)
            
            # การ์ด Income
            BoxLayout:
                orientation: "vertical"
                Label:
                    text: "Income"
                    color: 0, 1, 0, 1
                    font_size: '14sp'
                Label:
                    id: income_label
                    text: "0"
                    font_size: '18sp'
                    bold: True

            # การ์ด Expense
            BoxLayout:
                orientation: "vertical"
                Label:
                    text: "Expense"
                    color: 1, 0, 0, 1
                    font_size: '14sp'
                Label:
                    id: expense_label
                    text: "0"
                    font_size: '18sp'
                    bold: True

            # การ์ด Balance
            BoxLayout:
                orientation: "vertical"
                Label:
                    text: "Balance"
                    color: 0.2, 0.6, 1, 1
                    font_size: '14sp'
                Label:
                    id: balance_label
                    text: "0"
                    font_size: '18sp'
                    bold: True

        # ปุ่มเมนู
        Button:
            text: "Add Transaction"
            size_hint_y: None
            height: dp(48)
            on_press: root.manager.current = "add"

        Button:
            text: "View Report"
            size_hint_y: None
            height: dp(48)
            on_press: root.manager.current = "report"

        Button:
            text: "Settings"
            size_hint_y: None
            height: dp(48)
            on_press: root.manager.current = "setting"

        # หัวข้อรายการ
        Label:
            text: "Transactions:"
            size_hint_y: None
            height: dp(40)
            text_size: self.width, None
            halign: 'center'
            valign: 'middle'

        # รายการธุรกรรม
        ScrollView:
            do_scroll_x: False
            GridLayout:
                id: transaction_list
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(8)
                padding: dp(8)

<AddScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: dp(16)
        spacing: dp(12)

        Label:
            text: "Add Transaction"
            font_size: 24
            size_hint_y: None
            height: dp(50)
            halign: 'center'
            valign: 'middle'

        TextInput:
            id: amount_input
            hint_text: "Amount"
            input_filter: "float"
            multiline: False
            size_hint_y: None
            height: dp(40)

        TextInput:
            id: note_input
            hint_text: "Note"
            multiline: False
            size_hint_y: None
            height: dp(40)

        Spinner:
            id: type_spinner
            text: "Income"
            values: ["Income", "Expense"]
            size_hint_y: None
            height: dp(40)

        Spinner:
            id: category_spinner
            text: "General"
            values: ["General", "Food", "Travel", "Study", "Other"]
            size_hint_y: None
            height: dp(40)

        TextInput:
            id: date_input
            hint_text: "Date (DD/MM/YYYY)"
            multiline: False
            size_hint_y: None
            height: dp(40)

        BoxLayout:
            size_hint_y: None
            height: dp(48)
            spacing: dp(12)
            Button:
                text: "Save"
                on_press: root.save_transaction()
            Button:
                text: "Cancel"
                on_press: root.manager.current = "home"

<ReportScreen>:
    canvas.before:
        Color:
            rgba: 0.07, 0.07, 0.07, 1  # พื้นหลังสีดำเข้ม
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(15)

        # 1. หัวข้อและตัวเลือกเดือน
        BoxLayout:
            size_hint_y: None
            height: dp(50)
            spacing: dp(10)
            
            Label:
                text: "Monthly Report"
                font_size: '22sp'
                bold: True
                color: 1, 1, 1, 1
                size_hint_x: 0.4
                halign: 'left'
                text_size: self.size

            Spinner:
                id: month_spinner
                text: "Select Month"
                values: []
                background_normal: ''
                background_color: 0.2, 0.2, 0.2, 1
                color: 1, 1, 1, 1
                size_hint_x: 0.6
                on_text: root.filter_report()

        # 2. พื้นที่แสดงกราฟ (ใช้ Image Widget)
        Image:
            id: chart_image
            source: "" 
            allow_stretch: True
            keep_ratio: True
            size_hint_y: 0.5  # ให้พื้นที่กราฟ 50% ของหน้าจอ

        # 3. ตารางสรุป (Table Summary)
        BoxLayout:
            orientation: "vertical"
            size_hint_y: None
            height: dp(120)
            padding: dp(10)
            canvas.before:
                Color:
                    rgba: 0.15, 0.15, 0.15, 1 # พื้นหลังตารางสีเทา
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [10]

            # หัวตาราง
            GridLayout:
                cols: 3
                size_hint_y: None
                height: dp(30)
                Label:
                    text: "INCOME"
                    color: 0, 1, 0, 1
                    bold: True
                Label:
                    text: "EXPENSE"
                    color: 1, 0, 0, 1
                    bold: True
                Label:
                    text: "BALANCE"
                    color: 0.2, 0.6, 1, 1
                    bold: True
            
            # เส้นขีดคั่น
            Widget:
                size_hint_y: None
                height: dp(1)
                canvas:
                    Color:
                        rgba: 0.5, 0.5, 0.5, 1
                    Rectangle:
                        pos: self.x, self.y
                        size: self.width, self.height

            # ข้อมูลตัวเลข
            GridLayout:
                cols: 3
                Label:
                    id: report_income
                    text: "0.00"
                    font_size: '18sp'
                Label:
                    id: report_expense
                    text: "0.00"
                    font_size: '18sp'
                Label:
                    id: report_balance
                    text: "0.00"
                    font_size: '18sp'
                    bold: True

        # พื้นที่ว่างดันปุ่มกลับลงไป
        Widget: 
            size_hint_y: 0.1

        # ปุ่มย้อนกลับ
        Button:
            text: "Back"
            size_hint_y: None
            height: dp(50)
            background_normal: ''
            background_color: 0.2, 0.2, 0.2, 1
            on_press: root.manager.current = "home"

<SettingScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: dp(16)
        spacing: dp(12)

        Label:
            text: "Settings"
            font_size: 20
            size_hint_y: None
            height: dp(50)
            halign: 'center'
            valign: 'middle'

        Button:
            text: "Back"
            size_hint_y: None
            height: dp(44)
            on_press: root.manager.current = "home"