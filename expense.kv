#:import dp kivy.metrics.dp
#:import hex kivy.utils.get_color_from_hex

# --- ส่วนประกอบย่อย (Custom Widgets) ---

# 1. รายการธุรกรรม (Transaction List Item) - เพื่อให้สวยเหมือนในภาพ
<TransactionItem@BoxLayout>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.05 # พื้นหลังจางๆ
        Rectangle:
            pos: self.pos
            size: self.size
    size_hint_y: None
    height: dp(60)
    padding: dp(15), 0
    spacing: dp(15)

    # ไอคอนวงกลม
    Widget:
        size_hint: None, None
        size: dp(10), dp(10)
        pos_hint: {'center_y': 0.5}
        canvas:
            Color:
                rgba: root.indicator_color if hasattr(root, 'indicator_color') else (1, 1, 1, 1)
            Ellipse:
                pos: self.pos
                size: self.size

    # รายละเอียด
    Label:
        text: root.text_content if hasattr(root, 'text_content') else ""
        font_size: '14sp'
        color: 1, 1, 1, 1
        text_size: self.width, None
        halign: 'left'
        valign: 'middle'

# 2. หัวข้อในหน้า Setting (เปลี่ยนชื่อเพื่อแก้บั๊ก)
<MySettingItem@BoxLayout>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.05
        Rectangle:
            pos: self.pos
            size: self.size
    size_hint_y: None
    height: dp(60)
    padding: dp(20), 0
    spacing: dp(20)

# 3. ป้ายสรุปยอดเงิน
<SummaryLabel@Label>:
    size_hint_y: None
    height: dp(40)
    text_size: self.width, None
    halign: 'center'
    valign: 'middle'
    font_size: '16sp'

ScreenManager:
    HomeScreen:
        name: "home"
    AddScreen:
        name: "add"
    ReportScreen:
        name: "report"
    SettingScreen:
        name: "setting"

<HomeScreen>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1 # พื้นหลังดำสนิท
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        padding: dp(16)
        spacing: dp(12)

        Label:
            text: "Smart Expense Tracker"
            font_size: '24sp'
            size_hint_y: None
            height: dp(60)
            halign: 'center'
            valign: 'middle'
            
        BoxLayout:
            size_hint_y: None
            height: dp(40)
            spacing: dp(10)
            
            Label:
                text: "Select Month:"
                size_hint_x: None
                width: dp(100)
                color: 0.5, 0.5, 0.5, 1
                valign: 'middle'

            Spinner:
                id: month_filter
                text: "All Time"
                values: ["All Time"]
                size_hint_y: None
                height: dp(40)
                background_normal: ''
                background_color: 0.2, 0.2, 0.2, 1
                on_text: root.refresh()

        # ส่วนแสดงยอดเงิน
        GridLayout:
            cols: 3
            size_hint_y: None
            height: dp(80)
            spacing: dp(10)
            
            BoxLayout:
                orientation: "vertical"
                Label:
                    text: "Income"
                    color: 0, 1, 0, 1
                    font_size: '14sp'
                Label:
                    id: income_label
                    text: "0"
                    font_size: '18sp'
                    bold: True

            BoxLayout:
                orientation: "vertical"
                Label:
                    text: "Expense"
                    color: 1, 0, 0, 1
                    font_size: '14sp'
                Label:
                    id: expense_label
                    text: "0"
                    font_size: '18sp'
                    bold: True

            BoxLayout:
                orientation: "vertical"
                Label:
                    text: "Balance"
                    color: 0.2, 0.6, 1, 1
                    font_size: '14sp'
                Label:
                    id: balance_label
                    text: "0"
                    font_size: '18sp'
                    bold: True

        # ปุ่มเมนู
        Button:
            text: "Add Transaction"
            size_hint_y: None
            height: dp(48)
            background_normal: ''
            background_color: 0.3, 0.3, 0.3, 1
            on_press: root.manager.current = "add"

        Button:
            text: "View Report"
            size_hint_y: None
            height: dp(48)
            background_normal: ''
            background_color: 0.3, 0.3, 0.3, 1
            on_press: root.manager.current = "report"

        Button:
            text: "Settings"
            size_hint_y: None
            height: dp(48)
            background_normal: ''
            background_color: 0.3, 0.3, 0.3, 1
            on_press: root.manager.current = "setting"

        Label:
            text: "Transactions:"
            size_hint_y: None
            height: dp(40)
            text_size: self.width, None
            halign: 'center'
            valign: 'middle'

        # รายการธุรกรรม
        ScrollView:
            do_scroll_x: False
            GridLayout:
                id: transaction_list
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(8)
                padding: dp(8)

<AddScreen>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: "vertical"
        padding: dp(16)
        spacing: dp(12)

        Label:
            text: "Add Transaction"
            font_size: 24
            size_hint_y: None
            height: dp(50)
            halign: 'center'
            valign: 'middle'

        TextInput:
            id: amount_input
            hint_text: "Amount"
            input_filter: "float"
            multiline: False
            size_hint_y: None
            height: dp(40)
            background_color: 0.9, 0.9, 0.9, 1

        TextInput:
            id: note_input
            hint_text: "Note"
            multiline: False
            size_hint_y: None
            height: dp(40)
            background_color: 0.9, 0.9, 0.9, 1

        Spinner:
            id: type_spinner
            text: "Income"
            values: ["Income", "Expense"]
            size_hint_y: None
            height: dp(40)
            background_normal: ''
            background_color: 0.3, 0.3, 0.3, 1

        Spinner:
            id: category_spinner
            text: "General"
            values: ["General", "Food", "Travel", "Study", "Other"]
            size_hint_y: None
            height: dp(40)
            background_normal: ''
            background_color: 0.3, 0.3, 0.3, 1

        TextInput:
            id: date_input
            hint_text: "Date (DD/MM/YYYY)"
            multiline: False
            size_hint_y: None
            height: dp(40)
            background_color: 0.9, 0.9, 0.9, 1

        BoxLayout:
            size_hint_y: None
            height: dp(48)
            spacing: dp(12)
            Button:
                text: "Save"
                background_normal: ''
                background_color: 0.3, 0.3, 0.3, 1
                on_press: root.save_transaction()
            Button:
                text: "Cancel"
                background_normal: ''
                background_color: 0.3, 0.3, 0.3, 1
                on_press: root.manager.current = "home"
        Widget:

<ReportScreen>:
    canvas.before:
        Color:
            rgba: 0.07, 0.07, 0.07, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(15)

        BoxLayout:
            size_hint_y: None
            height: dp(50)
            spacing: dp(10)
            
            Label:
                text: "Monthly Report"
                font_size: '22sp'
                bold: True
                color: 1, 1, 1, 1
                size_hint_x: 0.4
                halign: 'left'
                text_size: self.size

            Spinner:
                id: month_spinner
                text: "Select Month"
                values: []
                background_normal: ''
                background_color: 0.2, 0.2, 0.2, 1
                color: 1, 1, 1, 1
                size_hint_x: 0.6
                on_text: root.filter_report()

        Image:
            id: chart_image
            source: "" 
            allow_stretch: True
            keep_ratio: True
            size_hint_y: 0.5 

        BoxLayout:
            orientation: "vertical"
            size_hint_y: None
            height: dp(120)
            padding: dp(10)
            canvas.before:
                Color:
                    rgba: 0.15, 0.15, 0.15, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [10]

            GridLayout:
                cols: 3
                size_hint_y: None
                height: dp(30)
                Label:
                    text: "INCOME"
                    color: 0, 1, 0, 1
                    bold: True
                Label:
                    text: "EXPENSE"
                    color: 1, 0, 0, 1
                    bold: True
                Label:
                    text: "BALANCE"
                    color: 0.2, 0.6, 1, 1
                    bold: True
            
            Widget:
                size_hint_y: None
                height: dp(1)
                canvas:
                    Color:
                        rgba: 0.5, 0.5, 0.5, 1
                    Rectangle:
                        pos: self.x, self.y
                        size: self.width, self.height

            GridLayout:
                cols: 3
                Label:
                    id: report_income
                    text: "0.00"
                    font_size: '18sp'
                Label:
                    id: report_expense
                    text: "0.00"
                    font_size: '18sp'
                Label:
                    id: report_balance
                    text: "0.00"
                    font_size: '18sp'
                    bold: True

        Widget: 
            size_hint_y: 0.1

        Button:
            text: "Back"
            size_hint_y: None
            height: dp(50)
            background_normal: ''
            background_color: 0.2, 0.2, 0.2, 1
            on_press: root.manager.current = "home"

<SettingScreen>:
    canvas.before:
        Color:
            rgba: 0.07, 0.07, 0.07, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            size_hint_y: None
            height: dp(60)
            padding: dp(20)
            Label:
                text: "Settings"
                font_size: '24sp'
                bold: True
                halign: 'left'
                text_size: self.size

        ScrollView:
            GridLayout:
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                padding: dp(20)
                spacing: dp(20)

                Label:
                    text: "GENERAL"
                    color: 0.5, 0.5, 0.5, 1
                    font_size: '14sp'
                    size_hint_y: None
                    height: dp(30)
                    halign: 'left'
                    text_size: self.size

                # ตรงนี้เปลี่ยนมาใช้ MySettingItem แทน SettingItem เพื่อแก้ Error
                MySettingItem:
                    Label:
                        text: "Currency"
                        halign: 'left'
                        text_size: self.size
                        valign: 'middle'
                    Spinner:
                        id: currency_spinner
                        text: "THB (฿)"
                        values: ["THB (฿)", "USD ($)", "EUR (€)"]
                        size_hint_x: None
                        width: dp(100)
                        background_normal: ''
                        background_color: 0.2, 0.2, 0.2, 1

                Label:
                    text: "DATA MANAGEMENT"
                    color: 0.5, 0.5, 0.5, 1
                    font_size: '14sp'
                    size_hint_y: None
                    height: dp(30)
                    halign: 'left'
                    text_size: self.size
                
                Button:
                    text: "Export to CSV"
                    size_hint_y: None
                    height: dp(50)
                    background_normal: ''
                    background_color: 0.2, 0.2, 0.6, 1
                    on_release: root.export_data()

                Button:
                    text: "Clear All Data"
                    color: 1, 0.3, 0.3, 1
                    size_hint_y: None
                    height: dp(50)
                    background_normal: ''
                    background_color: 0.2, 0.1, 0.1, 1
                    on_release: root.clear_data()

                Widget:
                    size_hint_y: None
                    height: dp(20)
                
                Label:
                    text: "Version 1.0.0\nDeveloped by CuteGroup"
                    color: 0.3, 0.3, 0.3, 1
                    font_size: '12sp'
                    halign: 'center'
                    size_hint_y: None
                    height: dp(50)

        Button:
            text: "Back"
            size_hint_y: None
            height: dp(60)
            background_normal: ''
            background_color: 0.15, 0.15, 0.15, 1
            on_release: root.manager.current = "home"